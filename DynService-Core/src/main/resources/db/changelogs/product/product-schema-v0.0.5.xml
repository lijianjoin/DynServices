<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="ismart2" id="product-schema-v0.0.5">
        <!-- Adding a reference from the executed_process to the planned_process -->
        <addColumn schemaName="product_schema"
                   tableName="executed_process">
            <column name="planned_process_id" type="uuid">
                <constraints
                        nullable="false"
                        primaryKey="false"
                />
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableSchemaName="product_schema"
                                 baseTableName="executed_process"
                                 baseColumnNames="planned_process_id"
                                 constraintName="fk_executed_process_planned_process_id"
                                 referencedTableName="planned_process"
                                 referencedColumnNames="id"
                                 referencedTableSchemaName="product_schema"/>

        <!-- Adding a reference from the executed_process_step to the planned_process_step -->
        <addColumn schemaName="product_schema"
                   tableName="executed_process_step">
            <column name="planned_process_step_id" type="uuid">
                <constraints
                        nullable="false"
                        primaryKey="false"
                />
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableSchemaName="product_schema"
                                 baseTableName="executed_process_step"
                                 baseColumnNames="planned_process_step_id"
                                 constraintName="fk_executed_process_step_planned_process_step_id"
                                 referencedTableName="planned_process_step"
                                 referencedColumnNames="id"
                                 referencedTableSchemaName="product_schema"/>

        <!-- Adding a reference from the executed_process_step_routine to the planned_process_step_routine -->
        <addColumn schemaName="product_schema"
                   tableName="executed_process_step_routine">
            <column name="planned_process_step_routine_id" type="uuid">
                <constraints
                        nullable="false"
                        primaryKey="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableSchemaName="product_schema"
                                 baseTableName="executed_process_step_routine"
                                 baseColumnNames="planned_process_step_routine_id"
                                 constraintName="fk_executed_process_step_routine_to_planned_process_step_routine_id"
                                 referencedTableName="planned_process_step_routine"
                                 referencedColumnNames="id"
                                 referencedTableSchemaName="product_schema"/>

    </changeSet>
</databaseChangeLog>