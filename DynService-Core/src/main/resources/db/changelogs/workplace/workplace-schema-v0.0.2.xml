<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="ismart2" id="workplace-schema-v0.0.1">

        <!-- WorkplaceEntity -->
        <addNotNullConstraint columnDataType="uuid"
                              columnName="type_id"
                              schemaName="workplace_schema"
                              tableName="workplace"/>
        <addNotNullConstraint columnDataType="uuid"
                              columnName="tag_id"
                              schemaName="workplace_schema"
                              tableName="workplace"/>
        <addNotNullConstraint columnDataType="varchar(255)"
                              columnName="uri"
                              schemaName="workplace_schema"
                              tableName="workplace"/>

        <!-- WorkplaceTypeEntity -->
        <addNotNullConstraint columnDataType="varchar(255)"
                              columnName="name"
                              schemaName="workplace_schema"
                              tableName="workplace_type"/>

        <!-- TagEntity -->
        <addNotNullConstraint columnDataType="varchar(255)"
                              columnName="name"
                              schemaName="workplace_schema"
                              tableName="tag"/>


        <!-- WeightSetEntity -->
        <addNotNullConstraint columnDataType="uuid"
                              columnName="workplace_id"
                              schemaName="workplace_schema"
                              tableName="weight_set"/>

        <!-- WeightEntity -->
        <addNotNullConstraint columnDataType="double"
                              columnName="nominal_value"
                              schemaName="workplace_schema"
                              tableName="weight"/>
        <addNotNullConstraint columnDataType="double"
                              columnName="deviation_value"
                              schemaName="workplace_schema"
                              tableName="weight"/>
        <addNotNullConstraint columnDataType="varchar(255)"
                              columnName="form"
                              schemaName="workplace_schema"
                              tableName="weight"/>
        <addNotNullConstraint columnDataType="double"
                              columnName="measurement_accuracy"
                              schemaName="workplace_schema"
                              tableName="weight"/>

    </changeSet>
</databaseChangeLog>